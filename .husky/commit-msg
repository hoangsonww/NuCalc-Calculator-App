#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Format: <type>: <subject>
# Types: feat, fix, docs, style, refactor, test, chore

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Allow merge commits and version tags
if echo "$commit_msg" | grep -qE "^Merge|^v[0-9]+\.[0-9]+\.[0-9]+"; then
  exit 0
fi

# Check conventional commit format
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{3,}"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow conventional commits format:"
  echo "  <type>: <subject>"
  echo "  or"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Example: feat: add calculation history feature"
  echo "Example: fix(calculator): resolve division by zero error"
  exit 1
fi
